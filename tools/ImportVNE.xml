<tool id="ImportVNE" name="Données VNE">
    <description>Importer des données depuis la base de données VNE</description>
    <requirements>
        <requirement type="package" version="0.6_2">r-rpostgresql</requirement>
        <requirement type="package" version="1.3.1">r-stringr</requirement>
        <requirement type="package" version="0.8.0.1">r-dplyr</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        Rscript '$__tool_directory__/importAndWriteFromQueryVNE2.R' '$observatoire' '$__tool_directory__/query/RequeteVDT.sql' '$__tool_directory__/query/RequeteOiseaux.sql' '$__tool_directory__/query/RequeteEscargots.sql'
        '$__tool_directory__/query/RequeteSAUVAGES.sql'
        '$output'
        ]]>
    </command>
    <inputs>
        <param name="observatoire" type="select" label="Choissez votre observatoire" multiple="false">
          <option value="Vers_de_terre">Placettes à vers de terre</option>
          <option value="Oiseaux_des_jardins">Oiseaux des jardins</option>
          <option value="Operation_escargot">Opération escargots</option>
          <option value="Sauvage_de_ma_rue">Sauvages de ma rue</option>
        </param>
    </inputs>
    <outputs>
        <data format="csv" name="output" from_work_dir="output-importVNE.csv" label="données_VNE_${observatoire}.csv"/>
    </outputs>
    <help><![CDATA[

.. class:: infomark

Vous pouvez importer des données depuis les bases VNE grâce à cet outils.


.. image:: http://localhost:8888${static_path}/images/tools/bricks/logoVNE.png


    ]]></help>
</tool>
