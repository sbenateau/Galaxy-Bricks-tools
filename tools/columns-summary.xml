<tool id="columns-summary" name="Opérations sur des colonnes">
    <requirements>
        <requirement type="package" version="1.12.2">r-data.table</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
      Rscript '$__tool_directory__/columns-summary.R' '$input' '$columnSelected' '$outputName' '$outputOperation'
      #if $addNewOperation.addOperation == "oui"
          '$addNewOperation.columnSelected' '$addNewOperation.outputName' '$addNewOperation.outputOperation'
      #end if
      '$output'
    ]]></command>
    <inputs>
        <param format="tabular,csv,txt" name="input" type="data" label="Données d'entrée" />
            <param name="columnSelected" label="Colonne à utiliser pour le calcul" type="data_column" data_ref="input" numerical="false" multiple = "true" />
            <param name="outputName" type="text" value="Resultat1" label="Nom de la colonne de résultat">
            <sanitizer invalid_char="_">
                <valid initial="default">
                    <add value="à" />
                    <add value="â" />
                    <add value="é" />
                    <add value="è" />
                    <add value="ê" />
                    <add value="ë" />
                    <add value="î" />
                    <add value="ï" />
                    <add value="ô" />
                    <add value="ù" />
                    <add value="û" />
                    <add value="ÿ" />
                    <add value="ç" />
                    <add value="œ" />
                    <add value="€" />
                </valid>
            </sanitizer>
        </param>
            <param name="outputOperation" type="select" label="Opération à réaliser">
                <option value="somme" selected="true">Somme</option>
                <option value="moyenne">Moyenne</option>
                <option value="ecarType">Ecart-type</option>
                <option value="ValeursSuperieuresAZero">Compter les valeurs supérieures à zéro</option>
            </param>
            <conditional name="addNewOperation">
              <param name="addOperation" type="select" label="Voulez-vous faire une autre opération ?">
                  <option value="non" selected="true">non</option>
                  <option value="oui">oui</option>
              </param>
          <when value="oui">
                <param name="columnSelected" label="Colonne à utiliser pour le calcul" type="data_column" data_ref="input" numerical="false" multiple = "true" />
                <param name="outputName" type="text" value="Resultat2" label="Nom de la colonne de résultat">
                    <sanitizer invalid_char="_">
                        <valid initial="default">
                        <add value="à" />
                        <add value="â" />
                        <add value="é" />
                        <add value="è" />
                        <add value="ê" />
                        <add value="ë" />
                        <add value="î" />
                        <add value="ï" />
                        <add value="ô" />
                        <add value="ù" />
                        <add value="û" />
                        <add value="ÿ" />
                        <add value="ç" />
                        <add value="œ" />
                        <add value="€" />
                    </valid>
                </sanitizer>
            </param>
            <param name="outputOperation" type="select" label="Opération à réaliser">
                <option value="somme" selected="true">Somme</option>
                <option value="moyenne">Moyenne</option>
                <option value="ecartType">Ecart-type</option>
                <option value="ValeursSuperieuresAZero">Compter les valeurs supérieures à zéro</option>
            </param>
          </when>
          <when value="non">
          </when>
          </conditional>
    </inputs>
    <outputs>
        <data format="csv" name="output" from_work_dir="result.csv"/>
    </outputs>
    <tests>
        <test>
            <param name="input" value="irisPlus.tabular"/>
            <param name="columnSelected" value="1"/>
            <param name="outputName" value="tada"/>
            <param name="outputOperation" value="somme"/>
            <conditional name="addNewOperation">
                <param name="addOperation" value="non"/>
            </conditional>
            <output name="output" file="output-columns-summary.csv"/>
        </test>
        <test>
            <param name="input" value="irisPlus.tabular"/>
            <param name="groupBy" value="5,6"/>
            <param name="function" value="moyenne"/>
            <param name="colOperation" value="1"/>
            <param name="nameCol" value="truc"/>
            <conditional name="addNewOperation">
                <param name="addOperation" value="oui"/>
                <param name="function" value="ecarType"/>
                <param name="colOperation" value="1"/>
                <param name="nameCol" value="tada"/>
            </conditional>
            <output name="output" file="output-dataplyr2.csv"/>
        </test>
    </tests>
    <help><![CDATA[

        .. class:: titre1-aide

        A quoi sert cet outil ?

        Cet outil permet de faire un calcul simple sur des colonnes.



    ]]></help>
</tool>
