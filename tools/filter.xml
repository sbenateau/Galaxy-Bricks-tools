<tool id="filter" name="Sélectionner des lignes">
    <description>en fonction de leur contenu</description>
    <requirements>
        <requirement type="package" version="1.12.2">r-data.table</requirement>
        <requirement type="package" version="0.8.0.1">r-dplyr</requirement>
        <requirement type="package" version="1.3.1">r-stringr</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        Rscript '$__tool_directory__/filter.R' '$input' '$negateMatching' '$filterParameter' '$condi_column.wholeLine'
        #if $condi_column.wholeLine == "FALSE"
            '$condi_column.columnNumber'
        #end if

        '$output'
        ]]>
    </command>
    <inputs>
        <param format="tabular,csv,txt" name="input" type="data" label="Données d'entrée" help="csv or tabular" />
        <param name="negateMatching" type="select" label="Choisir de" >
          <option value="garder">garder</option>
          <option value="supprimer">supprimer</option>
        </param>
        <param name="filterParameter" label="les lignes contenant" type="text" >
            <sanitizer invalid_char="_">
                <valid initial="default">
                    <add value="à" />
                    <add value="â" />
                    <add value="é" />
                    <add value="è" />
                    <add value="ê" />
                    <add value="ë" />
                    <add value="î" />
                    <add value="ï" />
                    <add value="ô" />
                    <add value="ù" />
                    <add value="û" />
                    <add value="ÿ" />
                    <add value="ç" />
                    <add value="œ" />
                    <add value="€" />
                </valid>
            </sanitizer>
        </param>
        <conditional name="condi_column">
        <param name="wholeLine" type="select" label="dans" >
            <option value="laColonne">la colonne</option>
            <option value="toutLeFichier">tout le fichier</option>
        </param>
        <when value="laColonne">
            <param name="columnNumber" label="Colonne à sélectionner" type="data_column" data_ref="input" multiple="false" value="1"/>
        </when>
        </conditional>
    </inputs>
    <outputs>
        <data format="csv" name="output" from_work_dir="output-filter.tabular" />
    </outputs>
    <help><![CDATA[

.. class:: infomark

    ]]></help>
</tool>
